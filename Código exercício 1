    <div class="container d-flex justify-content-center align-items-center vh-100">
        
        <div class="card p-4 login-card">
            <h3 class="text-center mb-3" >Sistema de Acesso</h3>
            <p class="text-center text-muted">Entre com seu usuário e senha</p>

        
            <div id="alertStatus"></div>

            
            <div class="mb-3">
                <label for="user" class="form-label">Usuário</label>
                <input type="text" id="user" class="form-control" placeholder="Digite seu usuário">
            </div>

            <div class="mb-3">
                <label for="senha" class="form-label">Senha</label>
                <input type="password" id="senha" class="form-control" placeholder="Digite sua senha">
            </div>

            <button class="btn btn-danger w-100" onclick="fazerLogin()">Entrar</button>
        </div>

    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    
    <script>
        function fazerLogin() {
            const usuario = document.getElementById("user").value.trim();
            const senha = document.getElementById("senha").value.trim();
            const alerta = document.getElementById("alertStatus");

       
            alerta.innerHTML = "";

            if (usuario === "" || senha === "") {
                alerta.innerHTML = `
                    <div class="alert alert-warning" role="alert">
                        Preencha com o usuário e a senha!
                    </div>
                `;
                return;
            }

            
            if (usuario === "mariazinha" && senha === "123456789") {
                alerta.innerHTML = `
                    <div class="alert alert-success" role="alert">
                        Login realizado com sucesso!
                    </div>
                `;
            } else {
                alerta.innerHTML = `
                    <div class="alert alert-danger" role="alert">
                        Usuário ou senha incorretos!
                    </div>
                `;
            }
        }
    </script>

